extends: default

rules:
  document-end: disable
  document-start: disable
  truthy: disable
  line-length:
    max: 120
  indentation:
    spaces: 2
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  quoted-strings:
    quote-type: double
    required: false
  comments:
    min-spaces-from-content: 1
